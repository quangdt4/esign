<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ESign_Primary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/emerald</item>
        <item name="colorPrimaryVariant">@color/emerald</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/emerald</item>
        <item name="colorSecondaryVariant">@color/emerald</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/emerald</item>
        <item name="android:windowLightStatusBar" >true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Theme.ESign_Primary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" >@color/emerald</item>
        <item name="android:windowLightStatusBar" >true</item>
    </style>

    <style name="Theme.ESign_Second" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/RedSoda</item>
        <item name="colorPrimaryVariant">@color/RedSoda</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/RedSoda</item>
        <item name="colorSecondaryVariant">@color/RedSoda</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:windowLightStatusBar" >true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Text12B">
        <item name="android:textSize">@dimen/s_12</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/charcoalGrey</item>
    </style>

    <style name="Text16W">
        <item name="android:textSize">@dimen/s_16</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text16B">
        <item name="android:textSize">@dimen/s_16</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/raisin_black</item>
    </style>

    <style name="Text20W">
        <item name="android:textSize">@dimen/s_20</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text20Bold">
        <item name="android:textSize">@dimen/s_20</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/raisin_black</item>
    </style>

</resources>